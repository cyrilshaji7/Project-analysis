@model IEnumerable<StudentManagementSystem.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h1 class="text-center">All Students List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Student</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>Age</th>
            <th>@Html.DisplayNameFor(model => model.GPA)</th>
            <th>GPA Scale</th>
            <th>@Html.DisplayNameFor(model => model.ProgramName)</th> <!-- ProgramName column -->

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@item.Age</td>
                <td>@Html.DisplayFor(modelItem => item.GPA)</td>
                <td>@item.GPAScale</td>
                <td>@item.ProgramName</td> <!-- Display ProgramName -->

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
